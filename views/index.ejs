<% include ./partials/header %>
<section id="login">
  <div class="container d-flex justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Bug Tracker Login</h5>

          <form action="/login" method="post">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
          </form>
          <div class="mt-3">
            <p class="text-center mb-0">Forgot your <a href="#">Password?</a></p>
            <p class="text-center mb-0">Don't have an account? <a href="/register">Sign Up</a></p>
            <p class="text-center mb-0">Sign in as a <a href="/signinasdemo">Demo User</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% include ./partials/footer %>